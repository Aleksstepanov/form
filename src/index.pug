html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Signup
	body
		div.wrapper
			.logo
				p.logo__text Sign up
			.userInfo
				.userInfo__title
					.userInfo__titleText New user?
					.userInfo__titleDescribe Use the form below to create your account.
				form.userInfo__form(name="Signup")
					.userInfo__wrapper
						fieldset.userInfo__block
							label(class="userInfo__label" for="LastName") Last Name
							input(type="text" name="LastName" class="baseInput")
						fieldset(class="userInfo__block")
							label(class="userInfo__label" for="FirstName") Last Name
							input(type="text" name="FirstName" class="baseInput")
					.userInfo__wrapper
						fieldset(class="userInfo__block")
							label(class="userInfo__label" for="Country") Nationality
								select(name="Country" size="1" class="baseInput")
								
						fieldset(class="userInfo__block")
							label(class="userInfo__label" for="email") E-mail
							input(type="email" name="email" class="baseInput")
					.userInfo__wrapper
						fieldset(class="userInfo__block")
							label(class="userInfo__label" for="date") Date of Birth
							input(type="date" name="date" class="baseInput")
						fieldset(class="userInfo__block")
							legend(class="userInfo__legend") Gender
								label(class="userInfo__labelGender" for="Male") Male
									input(type="radio" name="Male" class="baseInput")
								label(class="userInfo__labelGender" for="Female") Female
									input(type="radio" name="Female" class="baseInput")
					.userInfo__wrapper
						fieldset(class="userInfo__block")
							label(class="userInfo__label" for="Password") Password
							input(type="Password" name="Password" class="baseInput")
						fieldset(class="userInfo__block")
							label(class="userInfo__label" for="ConfirmPassword") Confirm Password
							input(type="Password" name="ConfirmPassword" class="baseInput")
					.userInfo__wrapper
						fieldset(class="userInfo__block")
							label(class="userInfo__label") Have an account?
								a(class="userInfo__link") Login
							input(type="submit" name="submit" value="Complete Signup" class="baseInput")